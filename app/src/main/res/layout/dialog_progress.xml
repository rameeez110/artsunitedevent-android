<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout	xmlns:android="http://schemas.android.com/apk/res/android"	xmlns:app="http://schemas.android.com/apk/res-auto"	android:id="@+id/body"	android:layout_width="match_parent"	android:layout_height="wrap_content"	android:orientation="horizontal"	android:background="@color/dialogBackground"	android:paddingStart="8dip"	android:paddingTop="10dip"	android:paddingEnd="8dip"	android:paddingBottom="10dip">		<ProgressBar		android:id="@+id/dialog_progress"		style="?android:attr/progressBarStyle"		android:layout_width="wrap_content"		android:layout_height="wrap_content"		android:layout_marginEnd="?dialogPreferredPadding"		android:max="10000"		android:indeterminateTint="@color/colorAccent"		app:layout_constraintBottom_toBottomOf="parent"		app:layout_constraintStart_toStartOf="parent"		app:layout_constraintTop_toTopOf="parent" />		<TextView		android:id="@+id/dialog_message"		android:layout_width="0dp"		android:layout_height="wrap_content"		android:layout_gravity="center_vertical"		android:layout_marginStart="@dimen/_10sdp"		android:textColor="@android:color/black"		app:layout_constraintBottom_toBottomOf="@+id/dialog_progress"		app:layout_constraintEnd_toEndOf="parent"		app:layout_constraintStart_toEndOf="@+id/dialog_progress"		app:layout_constraintTop_toTopOf="@+id/dialog_progress" /></androidx.constraintlayout.widget.ConstraintLayout>