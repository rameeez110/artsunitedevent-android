<resources>
	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="textAllCaps">false</item>
		
	</style>
	
	<style name="QuestionFont">
		<item name="android:textSize">@dimen/_13ssp</item>
		<item name="android:fontFamily">@font/trenda_semibold</item>
		<item name="android:textColor">@android:color/black</item>
	</style>
	
	<style name="AnswerFont">
		<item name="android:textSize">@dimen/_11ssp</item>
		<item name="android:fontFamily">@font/trenda_regular</item>
		<item name="android:textColor">@android:color/black</item>
	</style>
	
</resources>